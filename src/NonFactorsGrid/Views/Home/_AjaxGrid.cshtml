@using NonFactorsGrid.Controllers
@model IEnumerable<PersonModel>

<link rel="stylesheet" href="~/lib/nfgrid/mvc-grid.css" />
<script src="~/lib/nfgrid/mvc-grid.js"></script>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Name).Titled("Name");
        columns.Add(model => model.Surname).Titled("Surname");

        columns.Add(model => model.Age).Titled("Age");
        columns.Add(model => model.Birthday).Titled("Birth date");
        columns.Add(model => model.IsWorking).Titled("Employed");
    })
    .Pageable(pager =>
    {
        pager.PagesToDisplay = 2;
        pager.RowsPerPage = 2;
    })
    .Filterable()
    .Sortable()
)

<script>
    $(function () { $('.mvc-grid').mvcgrid(); });
</script>